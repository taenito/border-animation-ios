<?xml version="1.0" encoding="utf-8" ?>
<Border
    x:Class="App.FloatingActionButton"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Margin="16"
    BackgroundColor="#274891"
    HeightRequest="56"
    HorizontalOptions="End"
    MinimumWidthRequest="56"
    StrokeShape="RoundRectangle 28"
    VerticalOptions="End">
    <Border.Shadow>
        <Shadow
            Brush="Black"
            Opacity="0.16"
            Radius="3"
            Offset="0,3" />
    </Border.Shadow>

    <HorizontalStackLayout
        x:Name="Container"
        Padding="16"
        HorizontalOptions="Center"
        Spacing="12"
        VerticalOptions="Center">
        <Image
            x:Name="Icon"
            HeightRequest="20"
            IsVisible="False"
            VerticalOptions="Center" />
        <Label
            x:Name="Label"
            FontSize="14"
            IsVisible="False"
            TextColor="White"
            VerticalOptions="Center" />
    </HorizontalStackLayout>
</Border>
